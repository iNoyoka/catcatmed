        $('#body').fadeIn(500);
    });
    function Back(){
        $.ajax({
            method : "POST",
            url : 'back'
        }).done(function(data){
            window.location.href = '' + data;
        });
    }
    function Send(){
        let ageYear = $('#ageYear');
        let ageMonth = $('#ageMonth');
        const today = new Date();
        if(ageYear.val()!='null' && ageMonth.val()!='null'){
            $.ajax({
                method : 'POST',
                url : 'BCA',
                data : {
                    ageYear : $('#ageYear').val(),
                    ageMonth : $('#ageMonth').val()
                }
            }).done(function(data){
                window.location.href = '' + data;
            });
        }else{
            alert('請確認兩個格子都有輸入正確的值喔！');
        }
    }
</script>