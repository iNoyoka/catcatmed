<script>
     $(document).ready(function(){
        $('#body').fadeIn(500);
    });
    function Back(){
        $.ajax({
            method : "POST",
            url : 'back'
        }).done(function(data){
            window.location.href = '' + data;
        });
    }
    function Unsure(){
        $.ajax({
            method : 'POST',
            url : 'catfood_select',
            data: {
                name : '123'
            }
        }).done(function(data){
            window.location.href = '' + data;
        });
    }
    function Send(){
        let money = $('#money').val();
        if(money=='null'){
            document.getElementById('warningSpan').innerHTML = '請選擇您的預算喔～';
        }else{
            $.ajax({
                method: 'POST',
                url: 'catfood_select',
                data:{
                    name : money
                }
            }).done(function(data){
                window.location.href = '' + data;
            })
        }
    }
</script>